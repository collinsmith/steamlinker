<?xml version="1.0" encoding="UTF-8"?>

<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<fx:root xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         type="javafx.scene.layout.HBox"
         fx:controller="com.gmail.collinsmith70.steamlinker2.TransferQueue"
         prefWidth="640" prefHeight="128">
  <VBox style="-fx-border-color: -fx-box-border;">
    <Button contentDisplay="GRAPHIC_ONLY"
            mnemonicParsing="false"
            style="-fx-padding: 2px;">
      <graphic>
        <FontIcon iconLiteral="gmi-settings:20:dimgray"/>
      </graphic>
      <tooltip>
        <Tooltip text="%transfers.settings"/>
      </tooltip>
    </Button>
    <ToggleButton fx:id="btnPerformTransfers"
                  contentDisplay="GRAPHIC_ONLY"
                  mnemonicParsing="false"
                  style="-fx-padding: 2px;"
                  selected="true">
      <graphic>
        <FontIcon iconLiteral="gmi-play-arrow:20:seagreen"/>
      </graphic>
      <tooltip>
        <Tooltip text="%transfers.play"/>
      </tooltip>
    </ToggleButton>
    <!--<Button contentDisplay="GRAPHIC_ONLY"
            mnemonicParsing="false"
            style="-fx-padding: 2px;">
      <graphic>
        <FontIcon iconLiteral="gmi-stop:20:red"/>
      </graphic>
      <tooltip>
        <Tooltip text="%transfers.stop"/>
      </tooltip>
    </Button>-->
    <Button fx:id="btnRemoveTransfer"
            contentDisplay="GRAPHIC_ONLY"
            mnemonicParsing="false"
            style="-fx-padding: 2px;">
      <graphic>
        <FontIcon iconLiteral="gmi-close:20:red"/>
      </graphic>
      <tooltip>
        <Tooltip text="%transfers.remove"/>
      </tooltip>
    </Button>
    <Button fx:id="btnClearTransfers"
            contentDisplay="GRAPHIC_ONLY"
            mnemonicParsing="false"
            style="-fx-padding: 2px;">
      <graphic>
        <FontIcon iconLiteral="gmi-delete-sweep:20:dimgray"/>
      </graphic>
      <tooltip>
        <Tooltip text="%transfers.clear"/>
      </tooltip>
    </Button>
  </VBox>
  <TableView fx:id="transfersList" HBox.hgrow="ALWAYS">
    <placeholder>
      <Label text="%transfers.empty" textAlignment="CENTER"/>
    </placeholder>
  </TableView>
</fx:root>
