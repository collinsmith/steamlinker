<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      style="-fx-padding: 4px;"
      alignment="CENTER_LEFT"
      fx:id="repoItem">
  <VBox HBox.hgrow="ALWAYS">
    <Label fx:id="label" text="Steam Folder" style="-fx-font-size: 10pt;"/>
    <ProgressBar fx:id="progressBar" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
    <Label fx:id="progressBarText" text="0.0 B free of 0.0 B" opacity="0.5"/>
  </VBox>
</HBox>
